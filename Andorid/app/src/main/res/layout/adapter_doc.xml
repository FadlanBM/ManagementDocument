<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:foreground="@drawable/hovereffect"
        app:cardCornerRadius="@dimen/_5sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative2"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lbnameDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kunjungan Smk 1 Bali"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_11ssp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbnameDoc"
                android:id="@+id/liner2"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agenda :"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/robotomedium"
                    android:textSize="@dimen/_12ssp"
                    />
                <TextView
                    android:id="@+id/tgl_agendaAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2023"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="->"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    />
                <TextView
                    android:id="@+id/tgl_agendaAkhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/12/2023"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/liner3"
                android:layout_below="@+id/liner2"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Dokumen :"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/robotomedium"
                    android:textSize="@dimen/_12ssp"
                    />
                <TextView
                    android:id="@+id/tgl_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2023"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/liner4"
                android:layout_below="@+id/liner3"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal terima :"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/robotomedium"
                    android:textSize="@dimen/_12ssp"
                    />

                <TextView
                    android:id="@+id/tgl_diterima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="12/12/2023"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:layout_below="@id/liner4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List Penerima"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/robotomedium"
                        android:id="@+id/btn_listPenerima"
                        android:textColor="#1306C1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Dokumen"
                        app:cornerRadius="@dimen/_10sdp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:id="@+id/btn_detailDoc"/>
                </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>